<StackPanel
    x:Class="Gregghz.DisplayManager.Windows.Views.Dialogs.SaveDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Viewbox Stretch="Uniform">
        <Border Background="Aquamarine" BorderThickness="1">
            <Canvas x:Name="PreviewCanvas" Background="DarkGray" Width="200" Height="150" />
        </Border>
    </Viewbox>
    <TextBlock Text="Layout Name" />
    <TextBox Name="PopupTextBox" Width="200"
             Text="{x:Bind ViewModel.LayoutName, Mode=TwoWay}" />
</StackPanel>